  <div class="form-group">
    <label>Your name</label>
    <input name="client[name]" type="text" class="form-control" placeholder="Your name" value="<%= @c.name %>">
  </div>

  <div class="form-group">
    <label>Your phone number</label>
    <input name="client[phone]" type="text" class="form-control" placeholder="Your phone number" value="<%= @c.phone %>">
  </div>

  <div class="form-group">
    <label>When you will come?</label>
    <input id="datetimepicker" name="client[datestamp]" type="text" class="form-control" placeholder="Date and time" value="<%= @c.datestamp %>">
  </div>

  <div class="form-group">
    <label>Choose color: </label>
    <select id="color" name="client[color]">
      <option value="#7bd148">Green</option>
      <option value="#5484ed">Bold blue</option>
      <option value="#a4bdfc">Blue</option>
      <option value="#46d6db">Turquoise</option>
      <option value="#7ae7bf">Light green</option>
      <option value="#51b749">Bold green</option>
      <option value="#fbd75b">Yellow</option>
      <option value="#ffb878">Orange</option>
      <option value="#ff887c">Red</option>
      <option value="#dc2127">Bold red</option>
      <option value="#dbadff">Purple</option>
      <option value="#e1e1e1">Gray</option>
    </select>
  </div>



  <button type="submit" class="btn btn-primary">Sign up</button>
</form>


<script type="text/javascript">
$(function() {
  $('#color').simplecolorpicker();
  $('#datetimepicker').datetimepicker();
});
</script>

</html>